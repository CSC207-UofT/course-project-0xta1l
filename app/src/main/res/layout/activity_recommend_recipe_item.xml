<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity.RecommendRecipeItemActivity"
    android:id="@+id/recommendRecipePage"
    android:background="@color/greyBlue">

  <TextView
      android:id="@+id/recommendRecipeItemIngredients"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="36dp"
      android:textColor="@color/darkBlue"
      android:text="ingredients"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/recommendRecipeItemGenre" />

  <TextView
      android:id="@+id/recommendRecipeItemGenre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="61dp"
      android:textColor="@color/darkBlue"
      android:text="genre"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/recommendRecipeItemRating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:layout_marginEnd="42dp"
      android:textColor="@color/darkBlue"
      android:text="rating"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/recommendRecipeItemId" />

  <TextView
      android:id="@+id/recommendRecipeItemId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="61dp"
      android:layout_marginEnd="42dp"
      android:textColor="@color/darkBlue"
      android:text="id"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/recommendRecipeItemInstructions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="36dp"
      android:textColor="@color/darkBlue"
      android:text="instructions"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/recommendRecipeItemIngredients" />

  <ImageView
      android:id="@+id/recipeItemImage"
      android:layout_width="match_parent"
      android:layout_height="258dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:srcCompat="@tools:sample/backgrounds/scenic" />

  <Button
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="216dp"
      android:layout_marginEnd="20dp"
      android:onClick="saveRecipe"
      android:text="Save"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>